                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Variant="Variant.Flat" Shade="Shade.Lighter" Click="@(() => DeleteItem(data.Id))" Size="ButtonSize.Small" class="my-1 ms-1">

@layout LoginLayout
@page "/vids"
@inject HttpClient httpClient

@using Blazored.Video

<style>
    
    #myVideo {
      position: fixed;
      right: 0;
      bottom: 0;
      min-width: 100%;
      min-height: 100%;
    }
    
</style>

<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
        <BlazoredVideo id="myVideo" @ref="video"
                       Ended="VideoEnded"
                       VideoEventOptions="options"
                       autoplay="1"
                      
                       controls="controls"
                       class="w-75"
                       preload="auto"
                       >
            <source src="@videosource" type="video/mp4" />
        </BlazoredVideo>
</RadzenStack>


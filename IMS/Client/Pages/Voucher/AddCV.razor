
@using IMS.Shared.Models
@inject Radzen.DialogService DialogService
@inject HttpClient httpClient
@inject NotificationService NotificationService
@inject NavigationManager NavigationManager


<RadzenTemplateForm Data="@cv" Submit="@(async (POModel args) => { await SaveCV(args); })">
    <RadzenRow Gap="0.15rem">
        <RadzenColumn Size="12" SizeSM="12">
            <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">

                <RadzenDropDown Data=@pos TextProperty="pono" ValueProperty="Id" TValue="string" @bind-Value="@poid" Class="rz-background-color-white" Placeholder="Select PO" Name="po"
                                Change="@SelectPO" />
                <RadzenRequiredValidator Component="po" Text="PO is required" DefaultValue="0" Style="position:relative; top: -10px; width: fit-content" Popup="true" />

                <RadzenTextBox @bind-Value="@cv.payee" Class="rz-background-color-white" Placeholder="Payee" ReadOnly="true" />
               
                <RadzenTextBox @bind-Value="@cv.checkno" Name="checkno" Class="rz-background-color-white" Placeholder="CheckNo" />
                <RadzenRequiredValidator Component="checkno" Text="Checkno is required" Popup="true" Style="position:relative; top: -10px; width: fit-content" />


            </RadzenStack>
            <RadzenStack Orientation="Orientation.Horizontal" Class="mt-3" JustifyContent="JustifyContent.Right" Gap="0.5rem">
                <RadzenButton Text="Cancel" Click="@(() => CloseDialog())" ButtonStyle="ButtonStyle.Secondary" />
                <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" ButtonStyle="ButtonStyle.Primary" Shade="Shade.Dark" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
</RadzenTemplateForm>
@inject HttpClient httpClient
@inject ILocalStorageService _localStorage

<RadzenStack AlignItems="AlignItems.Center" Class="rz-p-12">
    <img src="image/cs.png" width="200px" style="margin-top:-35px" />    

    @{
        if (userLogin != null)
        {
            <RadzenPanelMenu Style="width:300px" Multiple="true">
                <ChildContent>
                    @foreach (var menu in userLogin.menus)
                    {
                        <RadzenPanelMenuItem Text="@menu.menu" Icon="@menu.icon" Path="@(menu.submenu.Count > 0 ? null : menu.path  )">
                            <ChildContent>
                                @foreach (var submenu in menu.submenu)
                                {
                                    <RadzenPanelMenuItem Text="@submenu.menu" Icon="@submenu.icon" Path="@submenu.path"  />
                                }
                            </ChildContent>
                        </RadzenPanelMenuItem>
                    }
                </ChildContent>
